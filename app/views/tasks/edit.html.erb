<h1>Update a bagaca</h1>
<%= form_for @task do |f| %>
  <%= f.label :title, "Update task" %>
  <%= f.text_field :title %>

  <%= f.label :details, "Update details" %>
  <%= f.text_field :details %>

    <%= f.label :completed, "Task completed" %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>
<%=link_to "Back to tasks", tasks_path%>